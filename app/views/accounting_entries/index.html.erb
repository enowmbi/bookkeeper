<h1>Accounting Entries</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Date prepared</th>
      <th>Date posted</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounting_entries.each do |accounting_entry| %>
      <tr>
        <td><%= accounting_entry.date_prepared %></td>
        <td><%= accounting_entry.date_posted %></td>
        <td><%= accounting_entry.memo %></td>
        <td><%= link_to 'Show', accounting_entry, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_accounting_entry_path(accounting_entry),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', accounting_entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Accounting Entry', new_accounting_entry_path, class: "btn btn-outline-primary" %>
